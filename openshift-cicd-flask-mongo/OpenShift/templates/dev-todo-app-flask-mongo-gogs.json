        "selector": {
          "app": "gogs",
          "deploymentconfig": "gogs"
        },
        "strategy": {
          "type": "Recreate"
        },
        "template": {
          "metadata": {
            "labels": {
              "app": "gogs",
              "deploymentconfig": "gogs"
            }
          },
          "spec": {
            "containers": [
              {
                "image": " ",
                "imagePullPolicy": "Always",
                "livenessProbe": {
                  "failureThreshold": 3,
                  "initialDelaySeconds": 15,
                  "periodSeconds": 10,
                  "successThreshold": 1,
                  "httpGet": {
                    "port": 3000,
