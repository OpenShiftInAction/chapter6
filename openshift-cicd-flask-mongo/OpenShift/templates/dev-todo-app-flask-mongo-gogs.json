                "ports": [
                  {
                    "containerPort": 3000,
                    "protocol": "TCP"
                  }
                ],
                "resources": {
                  "requests": {
                    "memory": "256Mi",
                    "cpu": "100m"
                  },
                  "limits": {
                    "memory": "512Mi",
                    "cpu": "200m"
                  }
                },
                "terminationMessagePath": "/dev/termination-log",
                "readinessProbe": {
                  "failureThreshold": 3,
                  "initialDelaySeconds": 15,
                  "periodSeconds": 10,
                  "successThreshold": 1,
                  "httpGet": {
                    "port": 3000,
                    "path": "/"
                  },
                  "timeoutSeconds": 1
                },
                "volumeMounts": [
                  {
                    "name": "gogs-data",
